@using SushiSharp.Web.Components.Sushi.Chat
@using SushiSharp.Game.Chat
@using SushiSharp.Game
@using SushiSharp.Game.ViewModels
<PageTitle>Sushi Lobby</PageTitle>

<h3>GameLobby</h3>
<MudGrid>
    <MudItem xs="6">
        <GameList Games="Games" JoinGame="JoinGame" CreateGame="CreateGame"/>
    </MudItem>
    <MudItem xs="6">
        <Chat Messages="Messages" SendChatMessage="SendChatMessage"/>
    </MudItem>
</MudGrid>

@code {
    [Parameter] public List<ChatMessage> Messages { get; set; } = [];

    [Parameter] public EventCallback<string> SendChatMessage { get; set; }

    [Parameter] public List<PublicGameData> Games { get; set; } = [];

    [Parameter] public EventCallback<string> JoinGame { get; set; }

    [Parameter] public EventCallback CreateGame { get; set; }
}
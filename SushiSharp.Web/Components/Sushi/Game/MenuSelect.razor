@using SushiSharp.Game
@using SushiSharp.Cards
<MudItem xs="Xs">
    <MudSelect T="CardType?" Label="@Slot.ToString()" Variant="Variant.Text" @bind-Value="_cardType" AnchorOrigin="Origin.BottomCenter" Disabled="Readonly">
        @foreach (var cardType in CardTypeExtensions.GetCardsOfType(Slot))
        {
            <MudSelectItem Value="cardType"/>
        }
    </MudSelect>
</MudItem>

@code {
    [Parameter] public int Xs { get; set; }
    [Parameter] public MenuSlot Slot { get; set; }
    [Parameter] public CardType? Default { get; set; }
    [Parameter] public bool Readonly { get; set; }

    private CardType? _cardType = null;

    protected override void OnInitialized()
    {
        if (Default != null)
        {
            _cardType = Default;
        }
    }
}
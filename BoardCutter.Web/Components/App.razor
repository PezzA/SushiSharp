@inject IHttpContextAccessor HttpContext
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <base href="/"/>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Princess+Sofia&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css"/>
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet"/>
    <link href="app.css" rel="stylesheet"/>
    <link href="sushi.css" rel="stylesheet"/>
    <link href="boardcutter.css" rel="stylesheet"/>
    <link rel="icon" type="image/png" href="favicon.png"/>
    <HeadOutlet/>
</head>

<body>
@{
    var cookieCollection = HttpContext.HttpContext?.Request.Cookies;
    var cookies = new Dictionary<string, string>();

    if (cookieCollection != null && cookieCollection.Any())
    {
        foreach (var cookie in cookieCollection)
        {
            cookies.Add(cookie.Key, cookie.Value);
        }
    }
}
<Routes Cookies="cookies"/>

<script src="_framework/blazor.web.js"></script>
<script src="_content/MudBlazor/MudBlazor.min.js"></script>
</body>
</html>
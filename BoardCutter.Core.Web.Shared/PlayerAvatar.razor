<MudAvatar Elevation="2" >
    <MudImage Src="@AvatarPath" Alt="@Name" ></MudImage>
</MudAvatar>
@if (ShowName)
{
    <MudText>@Name</MudText>
}

@code {

    [Parameter] public required string AvatarPath { get; set; }
    [Parameter] public required string Name { get; set; }
    [Parameter] public bool ShowName { get; set; }
}
@using BoardCutter.Games.SushiGo;
@using BoardCutter.Games.SushiGo.Web.Setup

@foreach (var (index, card) in Cards.Select((card, index) => (index, card)))
{
    <PlainCard @key="card.Id"
               Card="card"
               Left="LeftOffSet + ((BoardSettings.ScaledCardWidth + BoardSettings.CardGapNormal) * index)"
               Top="TopOffSet"/>
}

@foreach(var (card, index) in Side.Select((card, index) => (card, index)))
{
    <PlainCard
        @key="card.Id"
        Card="card"
        Top="TopOffSet + (index * 7)"
        Left="LeftOffSet + (10 * (BoardSettings.ScaledCardWidth + BoardSettings.CardGapNormal)) + (index * 15)"/>
}

@code {
    [Parameter] public required List<Card> Cards { get; set; }
    [Parameter] public required List<Card> Side { get; set; }
    [Parameter] public required int LeftOffSet { get; set; }
    [Parameter] public required int TopOffSet { get; set; }
}
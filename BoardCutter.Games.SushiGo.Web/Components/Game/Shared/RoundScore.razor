@using BoardCutter.Games.SushiGo
@using BoardCutter.Core.Players
<MudTable Items="@Scores"
          Dense="true"
          Breakpoint="Breakpoint.Sm"
          LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh></MudTh>
        @foreach (var player in Players)
        {
            <MudTh><PlayerAvatar Name="@player.Name" AvatarPath="@player.AvatarPath()" ShowName="true"></PlayerAvatar></MudTh>
        }
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Nr">@context.Key</MudTd>

        @foreach (var player in Players)
        {
            <MudTh>@context.Value[player.Id]</MudTh>
        }

    </RowTemplate>
</MudTable>

@code {
    [Parameter] public required int RoundNumber { get; set; }
    [Parameter] public required List<Player> Players { get; set; }
    [Parameter] public required Dictionary<CardType, Dictionary<string, int>> Scores { get; set; }
}
@using BoardCutter.Games.SushiGo.Models
@using BoardCutter.Games.SushiGo.Players
<MudTabs Elevation="4" Rounded="true" Color="@Color.Secondary">
    @foreach (var (roundNumber, roundScores) in ViewerVisible.GameScores)
    {
        var roundText = roundNumber == 4 ? "Deserts" : $"Round {roundNumber}";
        <MudTabPanel Text="@roundText">
            <RoundScore Scores="roundScores" RoundNumber="roundNumber" Players="PublicVisible.Players"/>
        </MudTabPanel>
    }
</MudTabs>
@code {
    [Parameter] public required PublicVisible PublicVisible { get; set; }
    [Parameter] public required ViewerVisible ViewerVisible { get; set; }
}